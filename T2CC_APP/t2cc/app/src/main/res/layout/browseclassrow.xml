<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/browseClassrow">

    <TextView
        android:id="@+id/classNumberRowLabel"
        android:layout_width="92dp"
        android:layout_height="20dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Class #" />

    <TextView
        android:id="@+id/classNameRowLabel"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:paddingLeft="5dp"
        android:text="12345678901234567890123456789012345678901234567890" />

    <TextView
        android:id="@+id/subscribeTeacherRowLabel"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_weight="0"
        android:layout_marginLeft="5dp"
        android:text="12345678901234567890@1234567890" />

    <Switch
        android:id="@+id/subscribeSwitchRow"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"/>

    <TextView
        android:id="@+id/statusLabelRow"
        android:layout_width="60dp"
        android:layout_gravity="center_vertical"
        android:layout_height="20dp"
        android:text="Pending" />
</LinearLayout>

