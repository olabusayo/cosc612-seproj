<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/myClassrow">

    <TextView
        android:id="@+id/myClassNumberRowLabel"
        android:layout_width="92dp"
        android:layout_height="20dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="COSC602-02" />

    <TextView
        android:id="@+id/myClassNameRowLabel"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="12345678901234567890123456789012345678901234567890" />

    <TextView
        android:id="@+id/myClassTeacherEmailRow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="12345678901234567890@123456789001234567" />

    <Switch
        android:id="@+id/myClassSubscribeSwitchRow"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/myClassMessageImage"
        android:layout_width="45dp"
        android:layout_gravity="center_vertical"
        android:layout_height="25dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_mail_black_24dp" />

</LinearLayout>

