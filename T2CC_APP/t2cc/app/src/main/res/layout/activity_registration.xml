<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">


    <TextView
        android:id="@+id/registrationLabel"
        android:layout_width="132dp"
        android:layout_height="33dp"
        android:layout_marginTop="104dp"
        android:text="Registration"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        app:srcCompat="@drawable/t2cc_logo_updated" />

    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.192">

        <LinearLayout
            android:id="@+id/firstNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstNameRegLabel"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="81dp"
                android:gravity="bottom|left"
                android:paddingRight="10dp"
                android:text=" First Name:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/firstNameRegField"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LastNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastNameRegLabel"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="81dp"
                android:gravity="bottom|left"
                android:paddingRight="10dp"
                android:text=" Last Name:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lastNameRegField"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailRegLabel"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="81dp"
                android:gravity="bottom|left"
                android:paddingRight="10dp"
                android:text=" Email:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailRegField"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passwordRegLabel"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="81dp"
                android:gravity="bottom|left"
                android:text=" Password: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordRegField"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirmPasswordRegLabel"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="81dp"
                android:gravity="bottom|left"
                android:paddingRight="10dp"
                android:text=" Confirm Password:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/confirmPasswordRegField"
                android:layout_width="250dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="634dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="221dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formLayout"
        app:layout_constraintVertical_bias="0.194" />


</androidx.constraintlayout.widget.ConstraintLayout>