<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent">


    <ImageView
        android:id="@+id/homeLogo"
        android:layout_marginLeft="5dp"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginRight="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        app:srcCompat="@drawable/t2cc_logo_updated" />


    <ImageView
        android:id="@+id/messagesImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:contentDescription="@string/messages_image"
        app:srcCompat="@drawable/ic_mail_black_24dp" />

    <ImageView
        android:id="@+id/logoutImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:contentDescription="exit Images"
        app:srcCompat="@drawable/ic_exit_to_app_black_24dp" />

    <TextView
        android:id="@+id/userInitial"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal|left"
        android:layout_weight="0"
        android:text="W.W."
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:textSize="27dp"
        android:textStyle="bold" />


</androidx.appcompat.widget.Toolbar>